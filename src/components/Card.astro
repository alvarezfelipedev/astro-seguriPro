---
interface Props {
  title?: string;
  content?: string;
}
const { title = 'Default title', content= 'Default content' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="card">
      <h1>{title}</h1>
      <p>{content}</p>
    </div>

    <style>
      .card {
        color: rgba(255, 0, 0, 0.737);
        background-color: rgba(88, 87, 87, 0.67);
      }
    </style>
  </body>
</html>
