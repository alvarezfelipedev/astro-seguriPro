---
const response = await fetch ('https://jsonplaceholder.typicode.com/posts/10')
const posts = await response.json()
---

<h1>Mis publicaciones</h1>
{
    posts.map(p => 
        (
            <div>
                <h1 class="id">{p.userId}</h1>
                <h2 class="title">{p.title}</h2>
                <h3 class="body">{p.body}</h3>
            </div>
        )
    )
}

<style>
    .id{
        color: skyblue;
    }
    .title{
        color: brown;
    }
    .body{
        color:chocolate;
    }

</style>